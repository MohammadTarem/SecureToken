@page
@model AuthWithSecureToken.Pages.LoginModel


<div class="container align-content-center">
    <form class="form" method="post" asp-asp-page="Login">
        <div class="form-control">
            <label asp-for="@Model.Login.Username"></label>
            <input type="text" asp-for="@Model.Login.Username" />
            <br /><br />
            <label asp-for="@Model.Login.Password"></label>
            <input type="text" asp-for="@Model.Login.Password" />
            <br /><br />
            <button type="submit">Login</button>
        </div>

    </form>
</div>
